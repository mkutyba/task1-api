{
  "name": "task1-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "nodemon dist/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js",
    "test": "npm run build-ts && mocha -- dist/test/**/*.js"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "compression": "^1.7.0",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.15.4",
    "express-validator": "^4.1.1",
    "mongoose": "^4.11.10",
    "morgan": "^1.8.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/chai": "^4.0.4",
    "@types/chai-http": "^3.0.3",
    "@types/compression": "0.0.34",
    "@types/dotenv": "^4.0.1",
    "@types/errorhandler": "0.0.31",
    "@types/express": "^4.0.37",
    "@types/mocha": "^2.2.42",
    "@types/mongoose": "^4.7.21",
    "@types/morgan": "^1.7.32",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "concurrently": "^3.5.0",
    "gulp": "^3.9.1",
    "gulp-typescript": "^3.2.2",
    "mocha": "^3.5.0",
    "mocha-typescript": "^1.1.7",
    "nodemon": "^1.12.0",
    "shelljs": "^0.7.8",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  }
}
